<?xml version="1.0"?>
<template
    format="5"
    revision="5"
    name="MvpRouteActivity"
    minApi="9"
    minBuildApi="14"
    description="创建MvpRoute mvpActyivity">

    <category value="Activity" />
    <formfactor value="Mobile" />


      <parameter
        id="mvprouteName"
        name="MvpRoute名字"
        type="string"
        constraints="class|unique|nonempty"
        default="MainActivity"
        help="没啥用  用了约束Activity Presenter  Contract名字" />

    <parameter
        id="activityClass"
        name="Activity Namess"
        type="string"
        constraints="class|unique|nonempty"
        suggest="${mvprouteName}Activity"
        default="MainActivity"
        help="The name of the activity class to create" />

    <parameter
        id="generateLayout"
        name="Generate Layout File"
        type="boolean"
        default="true"
        help="If true, a layout file will be generated" />

    <parameter
        id="layoutName"
        name="Layout Name"
        type="string"
        constraints="layout|unique|nonempty"
        suggest="${activityToLayout(activityClass)}"
        default="activity_main"
        visibility="generateLayout"
        help="The name of the layout to create for the activity" />
      <parameter
        id="generateContract"
        name="是否创建Contract"
        type="boolean"
        default="true"
        help="如果是true 则会创建Contract和Presenter" />
	<parameter
    	id="contarctName"
    	name="契约类名字"
   	 	type="string"
   		constraints="class|unique|nonempty"
    	suggest="${mvprouteName}Contract"
    	default="ActivityContract"
    	visibility="generateContract"
    	help="契约类名字"/>

    <parameter
    	id="presenterName"
    	name="presenter名字"
   	 	type="string"
   		constraints="class|unique|nonempty"
    	suggest="${mvprouteName}Presenter"
    	default="ActivityPresenter"
    	visibility="generateContract"
    	help="默认的Presenter"/>

    <!-- <parameter
        id="isLauncher"
        name="Launcher Activity"
        type="boolean"
        default="false"
        help="If true, this activity will have a CATEGORY_LAUNCHER intent filter, making it visible in the launcher" /> -->

    
    
    <parameter
        id="packageName"
        name="Package name"
        type="string"
        constraints="package"
        default="com.mycompany.myapp" />

    <!-- 128x128 thumbnails relative to template.xml -->
    <thumbs>
        <!-- default thumbnail is required -->
        <thumb>template_blank_activity.png</thumb>
    </thumbs>

    <globals file="globals.xml.ftl" />
    <execute file="recipe.xml.ftl" />

</template>
